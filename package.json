{
  "name": "lightning-node-operator",
  "version": "0.1.1",
  "description": "Automates various aspects of the operation of an LND lightning node.",
  "keywords": [
    "bitcoin",
    "lightning",
    "node",
    "operator",
    "automation"
  ],
  "homepage": "https://github.com/andreashuber69/lightning-node-operator/blob/develop/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/lightning-node-operator.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/lightning-node-operator/issues"
  },
  "license": "Unlicense",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "files": [
    "/dist/",
    "!/**/*.spec.*",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "start": "tsc && node .",
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "prebuild": "npm run lint",
    "build": "tsc",
    "build-code-doc": "typedoc 'src/**/*.ts' --excludePrivate --out 'code-doc'",
    "show-code-doc": "vite 'code-doc' --logLevel error --open",
    "test-no-coverage": "node --loader tsx --test src/*.spec.ts",
    "test": "c8 --exclude 'src/*.spec.ts' --exclude 'src/test/*' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "ci": "npm run build"
  },
  "dependencies": {
    "lightning": "^9.8.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.35",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/node": "^18.16.19",
    "c8": "^8.0.0",
    "coveralls": "^3.1.1",
    "cspell": "^6.31.1",
    "markdownlint-cli": "^0.35.0",
    "tsx": "^3.12.7",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "vite": "^4.3.9"
  }
}
