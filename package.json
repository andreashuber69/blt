{
  "name": "blt",
  "version": "1.0.0",
  "description": "Bitcoin Lightning Test",
  "keywords": [
    "bitcoin",
    "lightning",
    "test"
  ],
  "homepage": "https://github.com/andreashuber69/blt/blob/develop/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/blt.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/blt/issues"
  },
  "license": "Unlicense",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "files": [
    "/dist/",
    "!/**/*.spec.*",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "start": "tsc && node .",
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test-no-coverage": "ts-mocha --loader=ts-node/esm 'src/**/*.spec.ts'",
    "test": "c8 --exclude 'src/**/*.spec.ts' --exclude 'src/test/*' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "preci": "npm run build",
    "ci": "npm test"
  },
  "dependencies": {
    "lightning": "^9.7.1",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.31",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.18",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "cspell": "^6.31.1",
    "markdownlint-cli": "^0.35.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}
